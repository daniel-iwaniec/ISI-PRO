{% extends "FOSUserBundle::layout.html.twig" %}
{% block body %}
    <form id="login" class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        {% if error %}
            <div role="alert" class="alert alert-danger alert-dismissible fade in">
                <button class="close" aria-label="Close" data-dismiss="alert" type="button">
                    <span aria-hidden="true">×</span>
                </button>
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <strong>Błąd!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <h2 class="form-signin-heading">EduManagement</h2>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <label for="username" class="sr-only">login</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"
               placeholder="login" class="form-control" required
               {% if not last_username %}autofocus{% endif %}>

        <label for="password" class="sr-only">hasło</label>
        <input type="password" id="password" name="_password"
               placeholder="hasło" class="form-control" required
               {% if last_username %}autofocus{% endif %}/>

        <button class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit">zaloguj</button>
    </form>
{% endblock %}
