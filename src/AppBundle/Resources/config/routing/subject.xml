<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="przedmiot" path="/" methods="GET">
        <default key="_controller">AppBundle:Subject:index</default>
    </route>

    <route id="przedmiot_show" path="/{id}/show" methods="GET">
        <default key="_controller">AppBundle:Subject:show</default>
    </route>

    <route id="przedmiot_create" path="/create" methods="GET|PUT">
        <default key="_controller">AppBundle:Subject:create</default>
    </route>

    <route id="przedmiot_edit" path="/{id}/edit" methods="GET|POST">
        <default key="_controller">AppBundle:Subject:edit</default>
    </route>

    <route id="przedmiot_delete" path="/{id}/delete" methods="GET|DELETE">
        <default key="_controller">AppBundle:Subject:delete</default>
    </route>

</routes>
